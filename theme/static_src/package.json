	"license": "MIT",
	"devDependencies": {
		"@tailwindcss/cli": "^4.1.14",
		"cross-env": "^7.0.3",
		"daisyui": "^5.1.29",
		"postcss-nested": "^7.0.2",
		"postcss-simple-vars": "^7.0.1",
		"rimraf": "^6.0.1",
		"tailwindcss": "^4.1.14"
	}
}
